# Environment variables for aoi.js support assistant API
PORT=3333

# Local docs path (read-only)
DOCS_PATH=/home/bumblebee/aoi.ai/website

# Google Gemini (embeddings only)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_EMBED_MODEL=text-embedding-004

# Mistral (generation only)
MISTRAL_API_KEY=your_mistral_api_key
MISTRAL_MODEL=mistral-small-latest
MISTRAL_TEMPERATURE=0.2
MISTRAL_ENDPOINT=https://api.mistral.ai/v1/chat/completions

# Vector DB
VECTOR_DB_PATH=./data/vectors.db

# RAG
SIMILARITY_THRESHOLD=0.60
MAX_CONTEXT_CHARS=12000

# Ingestion
INGEST_SLEEP_MS=100

# Rate limiting
RATE_WINDOW_MS=60000
RATE_MAX=30
